$cell = 80px
rotation-point(top, left)
    position: absolute
    width: ($cell / 2)
    height: ($cell / 2)
    background: url("data:image/svg+xml;base64,");
    content: ''
    top: top + ($cell / 4)
    left: left + ($cell / 4)

.pentak
    position: relative

    i
        position: absolute
        width: $cell
        height: $cell
        background-color: #c7adff
        box-shadow: inset 1px 1px 0 0 #ccc;

    &__l
        &:after
            rotation-point($cell, 0)
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
        & i:nth-child(4)
            top: $cell * 3
        & i:nth-child(5)
            left: $cell

    &__i
        &:after
            rotation-point($cell * 2, 0)
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
        & i:nth-child(4)
            top: $cell * 3
        & i:nth-child(5)
            top: $cell * 4

    &__y
        &:after
            rotation-point($cell * 2, 0)
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
        & i:nth-child(4)
            top: $cell * 3
        & i:nth-child(5)
            top: $cell * 2
            left: $cell

    &__s
        &:after
            rotation-point($cell, 0)
        & i:nth-child(1)
            top: $cell
        & i:nth-child(2)
            top: $cell * 2
        & i:nth-child(3)
            top: $cell * 3
        & i:nth-child(4)
            left: $cell
        & i:nth-child(5)
            top: $cell
            left: $cell

    &__v
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
        & i:nth-child(4)
            top: $cell * 2
            left: $cell
        & i:nth-child(5)
            top: $cell * 2
            left: $cell * 2

    &__t
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
        & i:nth-child(4)
            top: $cell
            left: $cell
        & i:nth-child(5)
            top: $cell
            left: $cell * 2

    &__f
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
            left: $cell
        & i:nth-child(4)
            top: $cell
            left: $cell
        & i:nth-child(5)
            top: $cell
            left: $cell * 2

    &__z
        & i:nth-child(2)
            left: $cell
        & i:nth-child(3)
            top: $cell
            left: $cell
        & i:nth-child(4)
            top: $cell * 2
            left: $cell
        & i:nth-child(5)
            top: $cell * 2
            left: $cell * 2

    &__u
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            left: $cell * 2
        & i:nth-child(4)
            top: $cell
            left: $cell
        & i:nth-child(5)
            top: $cell
            left: $cell * 2

    &__p
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell * 2
        & i:nth-child(4)
            left: $cell
        & i:nth-child(5)
            top: $cell
            left: $cell

    &__x
        & i:nth-child(1)
            left: $cell
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell
            left: $cell
        & i:nth-child(4)
            top: $cell
            left: $cell * 2
        & i:nth-child(5)
            top: $cell * 2
            left: $cell

    &__w
        & i:nth-child(2)
            top: $cell
        & i:nth-child(3)
            top: $cell
            left: $cell
        & i:nth-child(4)
            top: $cell * 2
            left: $cell
        & i:nth-child(5)
            top: $cell * 2
            left: $cell * 2
